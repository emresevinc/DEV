@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.DisplayFor(d => d.Name)
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Name, null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.DisplayFor(d => d.Surname)
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Surname, null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.DisplayFor(d => d.Age)
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Age, null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.DisplayFor(d => d.DepartmentRecordId)
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.DepartmentRecordId, null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.DisplayFor(d => d.TittleRecordId)
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.TittleRecordId, null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.DisplayFor(d => d.Salary)
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Salary, null, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-default">Çalışan Ekle</button>
    </div>
}
